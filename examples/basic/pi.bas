10 PRINT "DIGITS?"
20 INPUT D
30 N=1
40 FOR I=1 TO D:N=N*10:NEXT I
50 T0=TIMER
60 A1=1/5
70 A1SQ=A1*A1
80 S1=0
90 T=A1
100 I=1
110 SIGN=1
120 WHILE ABS(T)>1/N
130 S1=S1+SIGN*T/I
140 T=T*A1SQ
150 I=I+2
160 SIGN=-SIGN
170 WEND
180 A2=1/239
190 A2SQ=A2*A2
200 S2=0
210 T=A2
220 I=1
230 SIGN=1
240 WHILE ABS(T)>1/N
250 S2=S2+SIGN*T/I
260 T=T*A2SQ
270 I=I+2
280 SIGN=-SIGN
290 WEND
300 PI=16*S1-4*S2
310 T1=TIMER
320 PRINT "PI=";INT(PI*N+0.5)/N
330 PRINT "TIME=";INT(T1-T0)
340 END
