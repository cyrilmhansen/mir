10 REM GAME OF LIFE 32X32
20 DIM A(31,31),B(31,31)
30 DATA 1,0,2,1,0,2,1,2,2,2,-1,-1
40 READ X,Y
50 IF X<0 THEN 80
60 A(X,Y)=1
70 GOTO 40
80 GOSUB 500
90 FOR G=1 TO 4
100 GOSUB 200
110 FOR Y=0 TO 31
120  FOR X=0 TO 31
130   A(X,Y)=B(X,Y)
140  NEXT X
150 NEXT Y
160 GOSUB 500
170 NEXT G
180 END
200 REM NEXT GENERATION
210 FOR Y=0 TO 31
220  FOR X=0 TO 31
230   N=0
240   FOR DY=-1 TO 1
250    YY=Y+DY
260    IF YY<0 OR YY>31 THEN 330
270    FOR DX=-1 TO 1
280     XX=X+DX
290     IF XX<0 OR XX>31 THEN 320
300     IF DX=0 AND DY=0 THEN 320
310     N=N+A(XX,YY)
320    NEXT DX
330   NEXT DY
340   IF A(X,Y)=1 THEN 360
350   IF N=3 THEN B(X,Y)=1 ELSE B(X,Y)=0
355   GOTO 370
360   IF N<2 OR N>3 THEN B(X,Y)=0 ELSE B(X,Y)=1
370  NEXT X
380 NEXT Y
390 RETURN
500 REM PRINT BOARD
510 FOR Y=0 TO 31
520  FOR X=0 TO 31
530   C$="."
540   IF A(X,Y)=1 THEN C$="O"
550   PRINT C$;
560  NEXT X
570  PRINT
580 NEXT Y
590 PRINT
600 RETURN
