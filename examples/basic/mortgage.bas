10 REM Mortgage calculations example
20 PRINT "FIXED-RATE MORTGAGE"
30 P=1000:AI=5:N=12
40 GOSUB 1000
50 PRINT
60 PRINT "LOMBARD MORTGAGE"
70 P=1000:AI=5:N=12
80 GOSUB 2000
90 PRINT
100 PRINT "MORTGAGE WITH EXTENSION"
110 P=1000:AI=5:N=12:EXT=6:NEWTERM=12:NEWRATE=4
120 GOSUB 3000
130 END
1000 REM Fixed-rate mortgage
1010 R=AI/1200
1020 A=1
1030 FOR K=1 TO N
1040  A=A*(1+R)
1050 NEXT K
1060 PAY=P*R*A/(A-1)
1070 BAL=P
1080 PRINT "MONTH PAYMENT INTEREST PRINCIPAL BALANCE"
1090 FOR I=1 TO N
1100  INTEREST=BAL*R
1110  PRIN=PAY-INTEREST
1120  BAL=BAL-PRIN
1130  PRINT I;" ";INT(PAY*100+0.5)/100;" ";INT(INTEREST*100+0.5)/100;" ";INT(PRIN*100+0.5)/100;" ";INT(BAL*100+0.5)/100
1140 NEXT I
1150 RETURN
2000 REM Lombard mortgage
2010 R=AI/1200
2020 BAL=P
2030 PAY=BAL*R
2040 PRINT "MONTH PAYMENT INTEREST PRINCIPAL BALANCE"
2050 FOR I=1 TO N-1
2060  PRINT I;" ";INT(PAY*100+0.5)/100;" ";INT(PAY*100+0.5)/100;" ";0;" ";INT(BAL*100+0.5)/100
2070 NEXT I
2080 INTEREST=BAL*R
2090 PRINT N;" ";INT((BAL+INTEREST)*100+0.5)/100;" ";INT(INTEREST*100+0.5)/100;" ";INT(BAL*100+0.5)/100;" ";0
2100 RETURN
3000 REM Mortgage extension
3010 R1=AI/1200
3020 A=1
3030 FOR K=1 TO N
3040  A=A*(1+R1)
3050 NEXT K
3060 PAY1=P*R1*A/(A-1)
