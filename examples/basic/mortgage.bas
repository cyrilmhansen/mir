3090 FOR I=1 TO EXT
3100  INTEREST=BAL*R1
3110  PRIN=PAY1-INTEREST
3120  BAL=BAL-PRIN
3130  PRINT I;" ";INT(PAY1*100+0.5)/100;" ";INT(INTEREST*100+0.5)/100;" ";INT(PRIN*100+0.5)/100;" ";INT(BAL*100+0.5)/100
3140 NEXT I
3150 R2=NEWRATE/1200
3160 A=1
3170 FOR K=1 TO NEWTERM
3180  A=A*(1+R2)
3190 NEXT K
3200 PAY2=BAL*R2*A/(A-1)
3210 FOR J=1 TO NEWTERM
