10 REM HANGMAN
20 RANDOMIZE 42
30 DIM W$(3)
40 DIM G(26)
50 W$(1)="MIR"
60 W$(2)="BASIC"
70 W$(3)="HANGMAN"
80 S$=W$(INT(RND(3))+1)
90 L=LEN(S$)
100 DIM H$(L)
110 FOR I=1 TO L
120 H$(I)="_"
130 NEXT I
140 TRIES=6
150 PRINT "HANGMAN. WORD: ";
160 FOR I=1 TO L
170 PRINT H$(I);" ";
180 NEXT I
190 PRINT
200 WHILE TRIES>0
210 PRINT "GUESS LETTER"
220 INPUT A$
230 A$=LEFT$(A$,1)
240 K=ASC(A$)-64
250 IF G(K) THEN PRINT "ALREADY": GOTO 200
260 G(K)=1
270 FOUND=0
280 FOR I=1 TO L
290 C$=MID$(S$,I,1)
300 IF C$=A$ THEN H$(I)=A$: FOUND=1
310 NEXT I
320 IF FOUND=0 THEN TRIES=TRIES-1:PRINT "WRONG. ";TRIES;" LEFT"
330 DONE=1
340 FOR I=1 TO L
350 PRINT H$(I);" ";
360 IF H$(I)="_" THEN DONE=0
370 NEXT I
380 PRINT
390 IF DONE THEN GOTO 500
400 WEND
500 IF DONE THEN PRINT "YOU WIN!" ELSE PRINT "YOU LOSE. WORD WAS ";S$
510 END
