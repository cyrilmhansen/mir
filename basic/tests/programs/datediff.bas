5 REM Compute days since Jan 1 and until Dec 31 for a date
10 DIM ML(12)
20 FOR I=1 TO 12: READ ML(I): NEXT I
30 PRINT "Year: ";: INPUT Y: PRINT
40 PRINT "Month: ";: INPUT M: PRINT
50 PRINT "Day: ";: INPUT D: PRINT
60 ML(2)=28
70 IF Y MOD 400 = 0 OR (Y MOD 4 = 0 AND Y MOD 100 <> 0) THEN ML(2)=29
80 DOY = D
90 FOR I=1 TO M-1: DOY = DOY + ML(I): NEXT I
100 IF ML(2)=29 THEN TOTAL=366 ELSE TOTAL=365
110 PRINT "Days since Jan 1: "; DOY - 1
120 PRINT "Days until Dec 31: "; TOTAL - DOY
130 END
200 DATA 31,28,31,30,31,30,31,31,30,31,30,31
