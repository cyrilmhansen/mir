10 REM star field in red
20 PRINT "STARFIELD"
30 HGR2
40 DIM X(49),Y(49),DX(49),DY(49)
50 FOR I=0 TO 49
60  DX(I)=RND(21)-10: DY(I)=RND(21)-10
70  X(I)=160: Y(I)=100
80 NEXT I
90 WHILE 1
100 IF INKEY$=" " THEN GOTO 200
110 FOR I=0 TO 49
120  HCOLOR=0: HPLOT X(I),Y(I)
130  X(I)=X(I)+DX(I)
140  Y(I)=Y(I)+DY(I)
150  IF X(I)<0 OR X(I)>319 OR Y(I)<0 OR Y(I)>199 THEN X(I)=160: Y(I)=100
160  HCOLOR=1: HPLOT X(I),Y(I)
170 NEXT I
180 WEND
200 END
