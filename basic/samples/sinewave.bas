10 W=80:H=48:ESC$=CHR$(27)
20 AMP=H/4:FREQ=.2:PH=0:DT=1/30
30 WHILE 1
40 S=TIMER
50 PRINT ESC$;"[H";ESC$;"[2J";
60 PRINT ESC$;"[38;5;208m";
70 FOR PX=0 TO W-1
80 Y=H/2+AMP*SIN((PX+PH)*FREQ)
90 R=INT(Y)
100 PRINT ESC$;"[";R;";";PX+1;"H";"█";
110 PRINT ESC$;"[";R+1;";";PX+1;"H";"█";
120 NEXT PX
130 PRINT ESC$;"[0m";
140 PH=PH+1
150 WHILE TIMER-S<DT:WEND
160 WEND
